---
import { getCollection } from "astro:content";
import Container from "@/components/primitives/Container.astro";
import Link from "@/components/primitives/Link.astro";
import { getLocalizedSettings } from "@/lib/localization-helpers";
import { translatePath, unlocalizedUrl } from "@/lib/localization-helpers";
import { defaultLocale, locales } from "site";

const currentLocale = Astro.currentLocale;

const { footer, contacts } = getLocalizedSettings(currentLocale);

function getTranslatedUrl(locale: string): string {
	const unlocalizedPath = unlocalizedUrl(Astro.url.pathname);
	return translatePath(locale, unlocalizedPath);
}

function isActiveLocale(locale: string): boolean {
	return locale === currentLocale;
}

const pages = await getCollection("pages");
const services = await getCollection("services");

const relatedLinks = [
	{ name: "Toronto Film and Television Office", link: "https://www.toronto.ca/business-economy/industry-sector-support/film/" },
	{ name: "ACCP", link: "https://www.theaccp.tv/" },
	{ name: "Ontario Film Commission", link: "https://www.ontariocreates.ca/filmcommission/film-in-ontario" },
	{ name: "Directors Guild of Ontario", link: "https://www.dgc.ca/en/ontario" },
	{ name: "Film & Event Solutions", link: "https://filmandevent.ca/" },
];

// get top 6 pages which are informational pages
const topInfoPages = pages
	.map((page) => {
		const [lang, ...slugParts] = page.slug.split("/");
		const pagePath = slugParts.length > 0 ? `/${slugParts.join("/")}` : "/";
		return {
			...page,
			lang: lang,
			slug: translatePath(currentLocale ?? defaultLocale, pagePath),
		};
	})
	.filter(
		(page) =>
			page.lang === currentLocale && page.data.type === "informational",
	)
	.slice(0, 6);

const topServices = services
	.map((page) => {
		const [lang, ...slug] = page.slug.split("/");
		return {
			...page,
			lang: lang,
			slug: translatePath(
				lang,
				`/service${unlocalizedUrl(`/${page.slug}`)}`,
			),
		};
	})
	.filter((page) => page.lang === currentLocale)
	.slice(0, 6);


