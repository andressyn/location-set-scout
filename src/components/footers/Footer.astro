						<path
							d="M60 10
								 C90 10 105 35 105 60
								 C105 95 60 150 60 150
								 Z"
							fill="#df2021"
							mask="url(#pin-cutout)"
							transform="translate(1, 0)"
						/>
					</g>

					<!-- Text block -->
